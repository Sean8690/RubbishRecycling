{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "lib": ["esnext", "dom", "es2015.core"],
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": ["./*"]
    },
    "pretty": true
  },
  "exclude": ["node_modules", "dist"]
}
