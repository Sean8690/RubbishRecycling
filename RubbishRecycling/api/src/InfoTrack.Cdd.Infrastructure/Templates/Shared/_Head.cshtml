@using InfoTrack.Cdd.Application.Common.Enums
@using InfoTrack.Cdd.Infrastructure.Utils
<head>
    <link rel="stylesheet" href="http://d30tso943ai3px.cloudfront.net/pdfhero/normalize.css">
    <link rel="stylesheet" href="http://d30tso943ai3px.cloudfront.net/pdfhero/milligram.min.css">
    <style>

        body {
            font-family: Calibri,Arial,sans-serif !important;
            color: #4a4a4a;
            font-size: 14px;
            margin: 1rem;
            padding: 1rem;
            width: 100%;
            width: @In8nHelper.DocumentPageSize.Width()mm;
            height: @In8nHelper.DocumentPageSize.Height()mm;
        }

        .pdf-container {
            padding: 30px;
        }

        .cover {
            page-break-after: always;
        }
        .titles {
            margin-bottom: 2rem;
        }

        .titles h1 {
            font-size: 48px;
        }

        .titles h2 {
            border: none;
            padding-top: 0;
            font-size: 24px;
        }

        .it-logo {
            height: 60px;
            top: 0;
            right: 0;
        }

        .it-logo img {
            float: right;
        }

        .flag {
            height: 2rem;
        }
        table .flag {
            float: right;
        }

        .contents {
            padding-top: 3rem;
        }

        section {
            padding-top: 2rem;
        }

        section, p {
            page-break-inside: avoid;
        }

        h1 {
            color: #003e5c;
            font-size: 25px;
            font-weight: 700;
            margin-top: 0
        }

        h2 {
            color: #003e5c;
            font-size: 18px;
            border-top: 1px #000 dotted;
            padding-top: 1rem;
            padding-bottom: 1rem;
            text-transform: uppercase;
        }

        h3 {
            color: #003e5c;
            font-size: 15px;
            font-weight: 700;
        }

        .report-title {
            color: #003e5c;
            font-size: 24px;
            font-weight: 700;
        }

        .label {
            color: #003e5c;
            padding: 0;
            text-align: left;
            font-weight: 700;
        }

        table {
            width: 100%;
            border-spacing: 0;
        }

        thead {
            display: table-header-group;
        }

        tfoot {
            display: table-row-group;
        }

        th {
            font-size: 12px;
            text-align: left;
            padding: 5px;
            color: #fff;
            background: #33657d;
            background: #003e5c;
            border-right: 1px solid #fff;
            border-bottom: 1px solid #fff;
        }

        td {
            padding: 5px;
        }

        tr:nth-child(odd) {
            background: #ececec;
        }

        tr:nth-child(even) {
            background: #f3f3f3;
        }

        .disclaimer p, .disclaimer li {
            font-size: 8px;
        }

        .end {
            text-align: center;
            font-weight: 700;
            padding-top: 40px;
        }

        .footer {
            color: #003e5c;
            text-align: right;
            position: absolute;
            top: @(In8nHelper.DocumentPageSize.Height()-15)mm;
            right: 10mm;
        }

        .aml-media {
            page-break-inside: avoid;
        }

        .smlText {
            font-size: 0.8rem;
        }
        .importantText {
            font-weight: bold;
        }
    </style>

</head>